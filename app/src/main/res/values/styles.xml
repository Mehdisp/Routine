<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/indigo_400</item>
        <item name="colorPrimaryVariant">@color/indigo_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/indigo_400</item>
        <item name="colorSecondaryVariant">@color/indigo_600</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="bottomSheetStyle">@style/AppTheme.BottomSheetTheme</item>
    </style>

    <style name="AppTheme.BottomSheetTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="AppOutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="rippleColor">@color/indigo_100</item>
    </style>

    <style name="AppTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/danafanumregular</item>
    </style>

</resources>